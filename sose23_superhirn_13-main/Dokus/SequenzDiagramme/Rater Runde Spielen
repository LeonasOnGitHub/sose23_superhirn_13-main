Controller<-Com:generede_code()
Controller->Model: place_color_code()
Controller<-Controller:change_state(guesser)
Screen<--Controller:Info
User<--Screen:show_rater_view

loop if (turn > 10 || code guessed)
note left of Screen:siehe SD Rater Spielzug
User->Screen:guess_code()

Screen->Controller:check_in_code()\n
Controller->Controller:check_guess()
Controller->Model:place_color_code()\n
Controller<-Controller:change_state(coder)

Controller<-Com:generate_respond()\n
Controller<-Controller:change_state(guesser)
Screen<-Controller:refresh_view
